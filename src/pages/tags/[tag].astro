---
import { getCollection } from 'astro:content';
import SluugListing from '../../components/SluugListing.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
    const allSluugMeetings: any = await getCollection('sluug');
    const uniqueTags = [...new Set(allSluugMeetings.map((meeting: any) => meeting.data.tags).flat())];
    return uniqueTags.map((tag) => {
        const filteredPosts = allSluugMeetings.filter((meeting: any) => meeting.data.tags.includes(tag));
        return {
            params: { tag },
            props: { meetings: filteredPosts },
        };
    });
}

const { tag } = Astro.params;
const { meetings } = Astro.props;
---

<BaseLayout pageTitle={tag}>
    <p>Posts tagged with {tag}</p>
    <ul>
        {
            meetings.map((meeting: any) => (
                <SluugListing
                    url={`/sluug/${meeting.slug}/`}
                    meetingDate={new Date(meeting.data.meetingDate).toISOString().slice(0, 10)}
                />
            ))
        }
    </ul>
</BaseLayout>
